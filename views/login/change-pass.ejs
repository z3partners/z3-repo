<%- include("../common/head.ejs"); %>
<% if(roles.role_id === 1 ) { %>
<%- include("../common/aside.ejs");%>
<% } else { %>
<%- include("../common/inv-aside.ejs");%>
<% } %>
<div class="layout-page">
    <%- include("../common/top-nav.ejs"); %>
    <script>
        const investor = <%- investor%>
    </script>
    <!-- Content wrapper -->
    <div class="content-wrapper">
        <!-- Content -->

        <div class="container-xxl flex-grow-1 container-p-y">
            <div class="row">
                <div class="col-lg-12 mb-4 order-0">
                    <div class="card">
                        <div class="d-flex align-items-end row">
                            <div class="col-sm-7">
                                <div class="card-body">
                                    <h5 class="card-title text-primary">Change Password</h5>
                                    <span class="danger"><%= (message) ? message: ''; %></span>
                                </div>
                            </div>
                            <div class="col-sm-5 text-center text-sm-left">
                                <div class="card-body pb-0 px-0 px-md-4">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl">
                    <div class="card col-md-6">
                        <div class="card-body">
                            <form name="investor" action="./password" method="post" id="change-pass">
                                <input type="hidden" name="investor_id" value="" id="investor_id" />
                                <div class="mb-3 form-password-toggle">
                                    <label class="form-label" for="password">Current Password</label>
                                    <div class="input-group input-group-merge">
                                        <input type="password" minlength="6" id="password" name="password" required class="form-control" aria-label="Password" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" aria-describedby="password">
                                        <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                                    </div>
                                </div>
                                <div class="mb-3 form-password-toggle">
                                    <label class="form-label" for="new_password">New Password</label>
                                    <div class="input-group input-group-merge">
                                        <input type="password" minlength="6" id="new_password" name="new_password" required class="form-control" aria-label="Password"  placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" aria-describedby="password">
                                        <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                                    </div>
                                </div>
                                <div class="mb-3 form-password-toggle">
                                    <label class="form-label" for="confirm-password">Confirm Password</label>
                                    <div class="input-group input-group-merge">
                                        <input type="password" minlength="6" id="confirm-password" name="confirm-password" required class="form-control" aria-label="Password"  placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" aria-describedby="password">
                                        <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                                    </div>
                                </div>
                                <button type="button" class="btn btn-primary" id="change-pass-btn">Change Password</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include("../common/footer-content.ejs");%>
    <div class="content-backdrop fade"></div>
</div>
<!-- Content wrapper -->
</div>
<!-- / Layout page -->
</div>

<!-- Overlay -->
<div class="layout-overlay layout-menu-toggle"></div>
</div>
<!-- / Layout wrapper -->
</div>
<%- include("../common/footer-imports.ejs"); %>
<script>
    function populateInvestorData(investorData) {
        document.getElementById("investor_id").value = investorData.user_id;
    }
    populateInvestorData(investor[0]);
</script>