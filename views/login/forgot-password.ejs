<%- include("../common/head.ejs");%>
<link rel="stylesheet" href="./static/assets/vendor/css/pages/page-auth.css" />
<div class="container-xxl">
    <div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication-inner py-4">
            <!-- Forgot Password -->
            <div class="card">
                <div class="card-body">
                    <!-- Logo -->
                    <div class="app-brand justify-content-center">
                        <a href="./" class="app-brand-link gap-2">
                            <img src="./static/assets/img/logo-dark.png" width="200" height="56" alt=""/> </a>
                    </div>
                    <!-- /Logo -->
                    <h4 class="mb-2">Forgot Password? ðŸ”’</h4>
                    <p class="mb-4">Enter your email and we'll send you instructions to reset your password</p>
                    <% if (message) { %>
                    <p class="mb-4 error-z3"><%= message %></p>
                    <% } %>
                    <form id="formAuthentication" class="mb-3" action="./forgot-password" method="POST">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input
                                    type="email"
                                    class="form-control"
                                    id="email"
                                    name="email"
                                    placeholder="Enter your email"
                                    autofocus
                                    required
                            />
                        </div>
                        <button class="btn btn-primary d-grid w-100">Send Reset Link</button>
                    </form>
                    <div class="text-center">
                        <a href="./login" class="d-flex align-items-center justify-content-center">
                            <i class="bx bx-chevron-left scaleX-n1-rtl bx-sm"></i>
                            Back to login
                        </a>
                    </div>
                </div>
            </div>
            <!-- /Forgot Password -->
        </div>
    </div>
</div>
<%- include("../common/footer-imports.ejs");%>